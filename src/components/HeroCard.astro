---
import OptimizedCover from "@components/OptimizedPicture.astro";
import FormattedDate from "@components/FormattedDate.astro";

const { post } = Astro.props;
---

<div
  class="relative overflow-hidden rounded-xl bg-white transition-transform duration-500 hover:-translate-y-1 hover:scale-105 dark:bg-neutral-900"
>
  <a href={`/posts/${post.id}/`} class="block">
    <OptimizedCover src={post.data.cover} alt={post.data.coverAlt} />
    <div
      class="absolute bottom-0 end-0 start-0 bg-linear-to-t from-black to-transparent p-6 md:p-8"
    >
      <div class="mt-16 flex items-center gap-4 text-xs text-white">
        <div class="flex flex-wrap gap-2">
          {post.data.tags.map((tag: string) => <span>{tag}</span>)}
        </div>
        <FormattedDate date={post.data.pubDate} />
      </div>
      <h2 class="mt-2 text-2xl font-bold text-white md:text-3xl">
        {post.data.title}
      </h2>
      <p class="mt-2 text-sm text-white md:text-base">
        {post.data.description}
      </p>
    </div>
  </a>
</div>
